<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<property name="LOG_PATH" value="./logs" />

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-3level %logger{5} - %msg %n</pattern>
    </encoder>
  </appender>
  
  <appender name="ROLLING" class="ch.qos.logback.core.rolling.RollingFileAppender">
	<filter class="ch.qos.logback.classic.filter.LevelFilter">
        <level>error</level>
        <onMatch>ACCEPT</onMatch>
        <onMismatch>DENY</onMismatch>
    </filter>
	<file>${LOG_PATH}/error.log</file>
	<encoder>
		<pattern>[%d{yyyy-MM-dd HH:mm:ss}:%-3relative][%thread] %-5level %logger{35} - %msg %n</pattern>
	</encoder>
	<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
		<fileNamePattern>${LOG_PATH}/error_%d{yyyy-MM-dd}_%i.log</fileNamePattern>
		<timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
			<maxFileSize>100MB</maxFileSize>	<!-- 파일 최대 용량 -->
		</timeBasedFileNamingAndTriggeringPolicy>
		<maxHistory>365</maxHistory>	<!-- 파일 보관 기간 -->
	</rollingPolicy>
  </appender>
  
  <!-- <appender name="FILE" class="ch.qos.logback.core.FileAppender">
    <file>${LOG_PATH}/logback.log</file>
    <encoder>
      <pattern>[%d{yyyy-MM-dd HH:mm:ss}:%-3relative][%thread] %-5level %logger{35} - %msg %n</pattern>
    </encoder>
  </appender> -->
  
  <root level="info">
    <appender-ref ref="STDOUT" />
    <appender-ref ref="ROLLING" />
  </root>
  
</configuration>